{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true /* Enable error reporting for expressions and declarations with an implied 'any' type. */
  },
  "exclude": ["test"]
}
