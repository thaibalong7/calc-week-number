{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "declarationDir": "./dist/types",
    "strict": true, /* Enable all strict type-checking options. */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "./src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/dev.*"
  ]
}
